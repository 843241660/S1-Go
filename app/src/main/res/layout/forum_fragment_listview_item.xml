<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="57dp"
              android:descendantFocusability="blocksDescendants"
              android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:orientation="horizontal"
            android:id="@+id/forum_base_fragment_listview_item_forum_linear">
        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/forum_base_fragment_listview_item_forum_img"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/forum_base_fragment_listview_item_title"
                android:textSize="18sp"
                android:textColor="@color/hehe"/>

        <Space android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"/>

        <ImageButton
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/forum_base_fragment_listview_item_star"
                android:background="@drawable/nostar"/>
    </LinearLayout>

    <!--<View-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginLeft="60dp"-->
            <!--android:background="@color/base"/>-->

</LinearLayout>