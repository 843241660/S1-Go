<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/basebackground</item>
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">@color/base</item>
        <!-- 底部导航栏颜色 -->
        <item name="android:navigationBarColor">@color/grey</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--状态栏颜色-->
        <item name="android:statusBarColor">@color/basebackground</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">@color/basebackground</item>
        <!--ActionMode出现时 覆盖ActionBar-->
        <item name="windowActionModeOverlay">true</item>
        <!--ActionBar 白色主题-->
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!--ActionMode样式-->
        <!--<item name="actionModeStyle">@style/MyActionMode</item>-->
        <item name="android:actionModeBackground">@color/base</item>
        <!--ActionBar item 样式-->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!--ActionBar menu 文字显示样式-->
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <!--ActionBar title 文字显示样式-->
        <item name="android:titleTextAppearance">@style/ToolbarTitleAppearance</item>
        <!--<item name="android:preferenceStyle">@style/xx</item>-->
    </style>

    <!--DrawerToggle配置-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--ToolBar 字体配置-->
